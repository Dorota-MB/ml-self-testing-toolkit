[
  {
    "ruleId": 1,
    "description": "Returns an NDC exceeded error response (ML error 4001) from the simulator when transfer value is 123 in any currency",
    "conditions": {
      "all": [
        {
          "fact": "path",
          "operator": "equal",
          "value": "/transfers"
        },
        {
          "fact": "method",
          "operator": "equal",
          "value": "post"
        },
        {
          "fact": "body",
          "operator": "equal",
          "value": "100",
          "path": "amount.amount"
        }
      ]
    },
    "event": {
      "type": "fixedCallback",
      "params": {
        "method": "put",
        "path": "/transfers/123",
        "headers": {},
        "delay": 2000,
        "body": {
          "transferState": "COMPLETED",
          "fulfilment": "80DdD328d2433f0b90a93aBed7ebE4DCFA9E7ff886DdA8A1A5914C3C0aeA3eDb",
